# === APP SETTINGS ===
APP_NAME=PoDrodze
APP_ENV=local
APP_KEY=
APP_DEBUG=true
APP_URL=http://localhost:8081
FRONTEND_URL=http://localhost:5173

# === DATABASE (used by Docker + Laravel) ===
DB_CONNECTION=pgsql
DB_HOST=db
DB_PORT=5432
DB_DATABASE=travel_app
DB_USERNAME=postgres
DB_PASSWORD=postgres

# === REDIS ===
REDIS_HOST=redis
REDIS_PORT=6379
REDIS_PASSWORD=null

# === MAILPIT ===
MAIL_MAILER=smtp
MAIL_HOST=mailpit
MAIL_PORT=1025
MAIL_USERNAME=null
MAIL_PASSWORD=null
MAIL_ENCRYPTION=null
MAIL_FROM_ADDRESS="noreply@example.com"
MAIL_FROM_NAME="${APP_NAME}"

# === GOOGLE MAPS ===
GOOGLE_MAPS_KEY=YOUR_GOOGLE_MAPS_KEY_HERE

# === FRONTEND (Vite) ===
VITE_APP_NAME="${APP_NAME}"
VITE_API_BASE_URL=http://localhost:8081/api/v1
VITE_MAPS_KEY="${GOOGLE_MAPS_KEY}"

# === SANCTUM / SPA ===
SANCTUM_STATEFUL_DOMAINS=localhost,localhost:8081,127.0.0.1,127.0.0.1:5173
COOKIE_SECURE=false

# === LOGGING ===
LOG_CHANNEL=stack
LOG_LEVEL=debug

# === DOCKER ONLY ===
DOMAIN=example.com
EMAIL=admin@example.com
