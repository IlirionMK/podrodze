# === APP SETTINGS ===
APP_NAME=PoDrodze
APP_ENV=local
APP_KEY=
APP_DEBUG=true
APP_URL=http://localhost:8081
FRONTEND_URL=http://localhost:5173

# Optional
#SCRIBE_BASE_URL=http://localhost:8081

# === LOCALE ===
APP_LOCALE=en
APP_FALLBACK_LOCALE=en
APP_FAKER_LOCALE=en_US

# === MAINTENANCE ===
APP_MAINTENANCE_DRIVER=file
# APP_MAINTENANCE_STORE=database

# === PHP ===
PHP_CLI_SERVER_WORKERS=4

# === SECURITY ===
BCRYPT_ROUNDS=12

# === LOGGING ===
LOG_CHANNEL=stack
LOG_STACK=single
LOG_DEPRECATIONS_CHANNEL=null
LOG_LEVEL=debug

# === DATABASE (PostgreSQL in Docker) ===
DB_CONNECTION=pgsql
DB_HOST=db
DB_PORT=5432
DB_DATABASE=travel_app
DB_USERNAME=postgres
DB_PASSWORD=postgres

# === SESSION ===
SESSION_DRIVER=cookie
SESSION_LIFETIME=120
SESSION_ENCRYPT=false
SESSION_PATH=/
SESSION_DOMAIN=localhost

# === CACHE / REDIS ===
CACHE_DRIVER=redis
REDIS_CLIENT=phpredis
REDIS_HOST=redis
REDIS_PASSWORD=null
REDIS_PORT=6379

# Redis DBs / prefixes
REDIS_DB=0
REDIS_CACHE_DB=1
REDIS_PREFIX=podrodze-cache-
CACHE_PREFIX=podrodze-cache-

# === QUEUE ===
QUEUE_CONNECTION=redis

# === MAIL (Mailpit) ===
MAIL_MAILER=smtp
MAIL_HOST=mailpit
MAIL_PORT=1025
MAIL_USERNAME=null
MAIL_PASSWORD=null
MAIL_ENCRYPTION=null
MAIL_FROM_ADDRESS="noreply@example.com"
MAIL_FROM_NAME="${APP_NAME}"

# === AWS (optional / not used locally) ===
AWS_ACCESS_KEY_ID=
AWS_SECRET_ACCESS_KEY=
AWS_DEFAULT_REGION=us-east-1
AWS_BUCKET=
AWS_USE_PATH_STYLE_ENDPOINT=false

# === GOOGLE MAPS ===
GOOGLE_MAPS_KEY=YOUR_GOOGLE_MAPS_KEY_HERE

# === GOOGLE OAUTH ===
GOOGLE_CLIENT_ID=YOUR_GOOGLE_CLIENT_ID_HERE
GOOGLE_CLIENT_SECRET=YOUR_GOOGLE_CLIENT_SECRET_HERE
GOOGLE_REDIRECT_URI=http://localhost:5173/auth/google

# === L5 SWAGGER ===
L5_SWAGGER_GENERATE_ALWAYS=false
L5_SWAGGER_CONST_HOST=http://localhost:8081/api/v1

# === AI SUGGESTIONS ===
AI_SUGGESTIONS_STRICT=true
AI_SUGGESTIONS_MIN_RATING=4.4
AI_SUGGESTIONS_MIN_REVIEWS=250
AI_SUGGESTIONS_MIN_SCORE=0.55
AI_SUGGESTIONS_EXTERNAL_ENABLED=true
AI_SUGGESTIONS_EXTERNAL_MAX_CANDIDATES=30

# === Sanctum / SPA connection ===
SANCTUM_STATEFUL_DOMAINS=localhost,localhost:3000,localhost:8081,127.0.0.1,127.0.0.1:8000
COOKIE_SECURE=false

# === Vite ===
VITE_APP_NAME="${APP_NAME}"
VITE_API_BASE_URL=http://localhost:8081/api/v1
VITE_MAPS_KEY="${GOOGLE_MAPS_KEY}"

# === DOCKER ONLY (optional) ===
DOMAIN=example.com
EMAIL=admin@example.com
